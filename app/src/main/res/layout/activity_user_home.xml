<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_buttons_container"
        android:gravity="center"
        android:text="@string/home_of_user"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="@color/colorAccent"/>

    <RelativeLayout
        android:id="@+id/home_buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/home_capture_button"
            android:layout_width="@dimen/home_button_width"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/home_feed_button"
            android:layout_width="@dimen/home_button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Feed"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
